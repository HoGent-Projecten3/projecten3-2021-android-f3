<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/hotel">

        <Button
            android:id="@+id/image_cinema"
            android:layout_width="144dp"
            android:layout_height="142dp"
            android:layout_marginStart="258dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="200dp"
            android:background="@android:color/transparent"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.313"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/image_trofeeKamer"
            android:layout_width="107dp"
            android:layout_height="117dp"
            android:layout_marginTop="22dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.83"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_penthouse" />

        <Button
            android:id="@+id/image_penthouse"
            android:layout_width="183dp"
            android:layout_height="126dp"
            android:layout_marginTop="39dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.855"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label_hotel" />

        <Button
            android:id="@+id/image_logo"
            android:layout_width="431dp"
            android:layout_height="54dp"
            android:layout_marginBottom="32dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/image_penthouse"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/image_infobalie"
            android:layout_width="122dp"
            android:layout_height="135dp"
            android:layout_marginBottom="64dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.134"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/image_bibliotheek"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="46dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.166"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_penthouse" />

        <Button
            android:id="@+id/image_bar"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginStart="92dp"
            android:layout_marginBottom="72dp"
            android:text="Button"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.215"
            app:layout_constraintStart_toEndOf="@+id/image_infobalie" />

        <TextView
            android:id="@+id/label_hotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="@color/colorPrimaryDark"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowRadius="5"
            android:text="Het Hotel"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/cardview_light_background"
            android:textColorHighlight="@color/colorPrimaryDark"
            android:textSize="@dimen/txtTitleSize"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>